<MyApp>:
    MDBackdrop:
        id: backdrop
        header_text: "Menu"
        header_title: "Backdrops"
        icon: "menu"
        left_action: backdrop.set_state("open")
        right_action: backdrop.set_state("close")
        
        MDBoxLayout:
            orientation: 'horizontal'
            spacing: 10
            
            MDRaisedButton:
                text: "Button 1"
                on_press: root.show_backdrop1(self)
            
            MDRaisedButton:
                text: "Button 2"
                on_press: root.show_backdrop2(self)
            
            MDLabel:
                id: selected_items_label1
            
            MDLabel:
                id: selected_items_label2