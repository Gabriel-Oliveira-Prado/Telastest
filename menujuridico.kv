Screen:
    name: 'Menu'
    MDNavigationLayout:
        ScreenManager:
            Screen:
                background_color:  '#FFFFFF'
                MDScrollViewRefreshLayout:
                    id: refresh_layout
                    refresh_callback: app.refresh_callback
                    root_layout: root
                    size_hint: 1, 0.9
                    canvas.before:
                        Color:
                            rgba: 0.0, 0.0, 0.75, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos

                    refreshing: True
                    refresh_timeout: 1.5
                    color: 0, 0, 1, 1

                    MDGridLayout:
                        id: box
                        adaptive_height: True
                        cols: 1
                        padding: dp(5)
                
                MDBottomNavigation:
                    background_color: 1, 1, 1, 1  
                    selected_color_background: app.theme_cls.primary_color
                    text_color_active: 0, 0, 0, 1
                    height: dp(64)  
                    spacing: 5

                    MDBottomNavigationItem:
                        name: 'screen 1'
                        text: 'Menu'
                        icon: 'home'
                        halign: 'center'
                        on_tab_press: app.switch_screen('menu')

                        MDFloatingActionButton:
                            icon: "pencil"
                            md_bg_color: app.theme_cls.primary_color
                            pos_hint: {'center_x': 0.88, 'center_y': 0.09}
                            elevation: 0
                            on_release: 
                                app.root.transition.direction = "up"
                                app.root.current = 'Publicacoes'

                    MDBottomNavigationItem:
                        name: 'screen 2'
                        text: 'Pesquisar'
                        icon: 'magnify'
                        halign: 'center'
                        on_tab_press: app.switch_screen('pesquisar') 

                        MDIconButton:
                            icon: 'arrow-left'
                            theme_text_color: 'Custom'
                            text_color: 0, 0, 0, 1
                            pos_hint: {'center_x': 0.1, 'center_y': 0.95}
                            on_release: app.go_to_left_screen()

                        FloatLayout:
                            size_hint: None, None
                            size: dp(200), dp(200)
                            pos_hint: {'center_x': 0.5, 'center_y': 0.95}

                            MDTextField:
                                hint_text: "Pesquisar"
                                mode: "round"
                                halign: 'left'
                                padding: 10
                                size_hint_x: None
                                size: dp(200),dp(20)
                                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                                icon_left: 'magnify'

                            MDIconButton:
                                icon: "filter"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1 
                                pos_hint: {'center_x': 1.2 , 'center_y': 0.5}
                            
                        
                        MDLabel:
                            text: 'Pesquisar'
                            halign: 'center'

                    MDBottomNavigationItem:
                        name: 'Screen 3_juridico'
                        text: 'Vagas'
                        icon: 'briefcase-variant'
                        halign: 'center'
                        on_tab_press: app.switch_screen('vagas')

                        MDIconButton:
                            icon: 'arrow-left'
                            theme_text_color: 'Custom'
                            text_color: 0, 0, 0, 1
                            pos_hint: {'center_x': 0.1, 'center_y': 0.95}
                            on_release: app.go_to_left_screen()

                        FloatLayout:
                            size_hint: None, None
                            size: dp(200), dp(200)
                            pos_hint: {'center_x': 0.5, 'center_y': 0.95}

                            MDTextField:
                                hint_text: "Pesquisar"
                                mode: "round"
                                halign: 'left'
                                padding: 10
                                size_hint_x: None
                                size: dp(200),dp(20)
                                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                                icon_left: 'magnify'

                            MDIconButton:
                                icon: "filter"
                                theme_text_color: "Custom"
                                text_color: 0, 0, 0, 1  
                                pos_hint: {'center_x': 1.2 , 'center_y': 0.5}
                        FloatLayout:
                            size_hint: None, None
                            size: dp(360), dp(640)
                            pos_hint: {'center_x': 0.5, 'center_y': 0.85}
                            ScrollView:
                                pos_hint: {'center_x': 0.5, 'center_y': 0.05}
                                size_hint: None, None
                                size: dp(360), dp(640)
                                BoxLayout:
                                    orientation: 'vertical'
                                    size_hint_y: None
                                    height: self.minimum_height
                                    spacing:30
                                    padding: 15
                                    MDCard:
                                        size_hint: None, None
                                        size: dp(350), dp(150) 
                                        pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                                        elevation: 0
                                        orientation: 'vertical'
                                        padding: dp(15)
                                        md_bg_color: 0, 0, 0, 1  
                                        radius: [dp(10)]
                                        styles: 'outlined'
                                    
                                        FitImage:
                                            source: 'Background\Backgroundcursos.png'
                                            allow_stretch: True
                                            keep_ratio: False
                                            size_hint: 1, 1
                                        
                                    MDLabel:
                                        text: "Vagas Anuciadas"
                                        font_size: dp(20)
                                        halign: "left"
                                        pos_hint: {'center_x': 0.5}
                                    
                                    


        MDNavigationDrawer:
            id: nav_drawer
            size_hint_y: 1
            spacing: 10
            background_color: 1, 1, 1, 1  

            FloatLayout:
                spacing: 14
                padding: dp(5)

                MDList:
                    pos_hint: {'center_x': 0.4, 'center_y': 0.31}
                            
                    ConfigItem:
                        text: "Perfil"
                        description: "Editar Perfil"
                        on_release: 
                            app.root.transition.direction = "right"
                            app.root.current = 'config_Perfil'
                        IconLeftWidget:
                            icon: "account-cog"
                    ConfigItem:
                        text: "Segurança"
                        description: "Configurações de segurança do aplicativo"
                        on_release: 
                            app.root.transition.direction = "right"
                            app.root.current = 'Config_Segurança'
                        IconLeftWidget:
                            icon: "security"
                    ConfigItem:
                        text: "Visibilidade"
                        description: "Opções de visibilidade"
                        on_release: 
                            app.root.transition.direction = "right"
                            app.root.current = 'Config_Visibilidade'
                        IconLeftWidget:
                            icon:"eye"
                    ConfigItem:
                        text: "Privacidade de Dados"
                        description: "Controle de privacidade e segurança de dados"
                        on_release: 
                            app.root.transition.direction = "right"
                            app.root.current = 'Config_Privacidade_Dados'
                        IconLeftWidget:
                            icon:'lock'
                    ConfigItem:
                        text: "Notificações"
                        description: "Gerencie as notificações do aplicativo"
                        on_release: 
                            app.root.transition.direction = "right"
                            app.root.current = 'config_notificações'
                        IconLeftWidget:
                            icon: "bell-cog"
                            on_release: 
                                app.root.transition.direction = "right"
                                app.root.current = 'config_notificações'
                        
                    ConfigItem:
                        text: "Logout"
                        description: "Sair da conta e fazer logout do aplicativo"
                        on_release: app.show_logout_dialog()
                        IconLeftWidget:
                            icon: "logout"
                MDLabel:
                    id:Username
                    text: "Username"
                    font_size: dp(20)
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]
                    pos_hint: {'center_x': 0.45, 'center_y': 0.94}

                Image:
                    source: 'Background\profile.png'
                    size_hint: None, None
                    size: dp(65), dp(65)  
                    pos_hint: {'center_x': 0.10,'center_y': 0.95}
                    pos: self.parent.pos

                MDIconButton:
                    icon: "account-circle"
                    theme_text_color: "Custom"
                    pos_hint: {'center_x': 0.1,'center_y': 0.03}
                    text_color: 0, 0, 0, 1  
                    on_release: app.change_screen('Conta')

                MDIconButton:
                    icon: "moon-waning-crescent"
                    theme_text_color: "Custom"
                    pos_hint: {'center_x': 0.3,'center_y': 0.03}
                    text_color: 0, 0, 0, 1  
                    on_release: app.change_screen('Modo_noturno')
                    
                MDIconButton:
                    icon:'bookmark-multiple'
                    theme_text_color: "Custom"
                    pos_hint: {'center_x': 0.5,'center_y': 0.03}
                    text_color: 0, 0, 0, 1  
                    on_release: 
                        app.root.transition.direction = "right"
                        app.root.current = 'Salvos'

                MDIconButton:
                    icon:"bell-ring"
                    theme_text_color: "Custom"
                    pos_hint: {'center_x': 0.7,'center_y': 0.03}
                    text_color: 0, 0, 0, 1  
                    on_release: 
                        app.root.transition.direction = "right"
                        app.root.current = 'Notificacoes'

                MDIconButton:
                    icon:"chat"
                    theme_text_color: "Custom"
                    pos_hint: {'center_x': 0.9,'center_y': 0.03}
                    text_color: 0, 0, 0, 1  
                    on_release: 
                        app.root.transition.direction = "right"
                        app.root.current = 'chat'