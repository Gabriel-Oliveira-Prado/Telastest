Screen:
    name: 'criar_vaga'
    MDFloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        MDIconButton:
            icon: 'arrow-left'
            theme_text_color: 'Custom'
            text_color: 0, 0, 0, 1
            pos_hint: {'center_x': 0.1, 'center_y': 0.95}
            on_release: 
                app.root.transition.direction = "right"
                app.root.current = 'Menu'
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(1)
            padding: dp(5)
            spacing: dp(5)
            pos_hint: {'center_x': 0.5, 'center_y': 0.92}
            canvas:
                Color:
                    rgba: 0.7, 0.7, 0.7, 1 
                Rectangle:
                    size: self.size
                    pos: self.pos
        FloatLayout:
            size_hint: None, None
            size: dp(200), dp(200)
            pos_hint: {'center_x': 0.5, 'center_y': 0.95}
            MDLabel:
                text: "Criar Vaga"
                font_size: dp(20)
                halign: "center"
                size_hint_x: None
                size: dp(300), dp(20)
                pos_hint: {'center_x': 0.5, 'center_y': 0.51}
                theme_text_color: "Custom"
                text_color: 0, 0, 0, 1
        ScrollView:
            size_hint: None, None
            size: dp(360), dp(640) 
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            do_scroll_x: False 
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
                padding: dp(10)
                MDCard:
                    size_hint: None, None
                    size: dp(350), dp(50) 
                    elevation: 0
                    md_bg_color: 0, 0, 0, 0
                MDLabel:
                    text: "Especificação:"
                    font_size: dp(20)
                    halign: "left"
                    size_hint_x: None
                    size: dp(300), dp(20)
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                MDRoundFlatIconButton:
                    icon:'pencil'
                    id: button1
                    text: "                        especificação                       "
                    size_hint: None, None
                    width: dp(200)
                    height: dp(50)
                    background_color: 0, 0, 0, 0
                    color: 0, 0, 0, 1
                    on_release: app.show_especificacao(button1)
                    border_color: 0, 0, 0, 1
                    text_color: 0, 0, 0, 1    
                MDLabel:
                    text: "Cargo:"
                    font_size: dp(20)
                    halign: "left"
                    size_hint_x: None
                    size: dp(300), dp(20)
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                MDRoundFlatIconButton:
                    icon:'pencil'
                    id: button2
                    text: "                              cargo                                   "
                    size_hint: None, None
                    width: dp(200)
                    height: dp(50)
                    background_color: 0, 0, 0, 0
                    color: 0, 0, 0, 1
                    on_release: app.show_cargo(button2)
                    border_color: 0, 0, 0, 1
                    text_color: 0, 0, 0, 1         
                MDLabel:
                    text: "Local de trabalho:"
                    font_size: dp(20)
                    halign: "left"
                    size_hint_x: None
                    size: dp(300), dp(20)
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                MDRoundFlatIconButton:
                    icon:'pencil'
                    id: button3
                    text: "                     local de trabalho                    "
                    size_hint: None, None
                    width: dp(200)
                    height: dp(50)
                    background_color: 0, 0, 0, 0
                    color: 0, 0, 0, 1
                    on_release: app.show_local_de_trabalho(button3)
                    border_color: 0, 0, 0, 1
                    text_color: 0, 0, 0, 1
                MDLabel:
                    text: "Localidade:"
                    font_size: dp(20)
                    halign: "left"
                    size_hint_x: None
                    size: dp(300), dp(20)
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1
                MDRoundFlatIconButton:
                    icon:'pencil'
                    id: button4
                    text: "                            localidade                           "
                    size_hint: None, None
                    width: dp(200)
                    height: dp(50)
                    background_color: 0, 0, 0, 0
                    color: 0, 0, 0, 1
                    on_release: app.show_localidade(button4)
                    border_color: 0, 0, 0, 1
                    text_color: 0, 0, 0, 1
                MDLabel:
                    text: "Tipo de vagas:"
                    font_size: dp(20)
                    halign: "left"
                    size_hint_x: None
                    size: dp(300), dp(20)
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1       
                MDRoundFlatIconButton:
                    icon:'pencil'
                    id: button5
                    text: "                         tipo de vagas                        "
                    size_hint: None, None
                    width: dp(200)
                    height: dp(50)
                    background_color: 0, 0, 0, 0
                    color: 0, 0, 0, 1
                    on_release: app.show_tipo_de_vaga(button5)
                    border_color: 0, 0, 0, 1
                    text_color: 0, 0, 0, 1
                MDLabel:
                    text: "Sobre a vaga:"
                    font_size: dp(20)
                    halign: "left"
                    size_hint_x: None
                    size: dp(300), dp(20)
                    theme_text_color: "Custom"
                    text_color: 0, 0, 0, 1   
                MDTextField:
                    hint_text: "Sobre a Vaga"
                    helper_text: "Descreva sobre a vaga"
                    multiline: True
                    mode: "rectangle"
                    max_text_length: 1500
                    font_size: sp(14)
                    size_hint_y: None
                    height: self.minimum_height
                    line_color_focus: app.theme_cls.primary_color
                    line_color_normal: app.theme_cls.primary_color
                MDRaisedButton:
                    text: 'Publicar'
                    size_hint_x: 0.8
                    pos_hint: {'center_x': 0.5}