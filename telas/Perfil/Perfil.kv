MDScreen:
    MDNavigationLayout:

        ScreenManager:

            Screen:
                name: 'Perfil'
                background_color: 1, 1, 1, 1 
                
                FloatLayout:
                    spacing: 14
                    pos_hint: {'center_x': 0.5, 'center_y': 0.9}
                    size_hint: None, None
                    size: dp(360), dp(160) 
                    
                    MDCard:
                        size_hint_x: None
                        size: dp(360), dp(160)  
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        elevation: 1
                        orientation: 'vertical'
                        md_bg_color: 0, 0, 0, 1  
                        mode: "round"
                        
                        Image:
                            source: 'Background\Background3.png'
                            allow_stretch: True
                            keep_ratio: False

                    MDIconButton:
                        icon: 'arrow-left'
                        theme_text_color: 'Custom'
                        text_color: 0, 0, 0, 1
                        pos_hint: {'center_x': 0.1, 'center_y': 0.7}
                        on_release: "menu"
                        size_hint: None, None
                        size: dp(48), dp(48)
                
                    MDIconButton:
                        icon: 'camera'
                        theme_text_color: "Custom"
                        pos_hint: {'center_x': 0.9,'center_y': 0.7}
                        size_hint: None, None
                        size: dp(48), dp(48)
                        text_color: 0, 0, 0, 1  
                        on_release: app.change_screen('Trocar_Background_Perfil')

                FloatLayout:
                    size_hint: None, None
                    size: dp(100), dp(100) 
                    pos_hint: {'center_x': 0.2, 'center_y': 0.78}
                    Image:
                        source: 'Background\profile.png'
                        allow_stretch: True
                        keep_ratio: False
                        size_hint: None, None
                        size: dp(100), dp(100)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

                    MDIconButton:
                        icon: 'camera'
                        theme_text_color: "Custom"
                        pos_hint: {'center_x': 0.82,'center_y': 0.14}
                        size_hint: None, None
                        size: dp(48), dp(48)
                        text_color: 0, 0, 0, 1  
                        on_release: app.change_screen('Trocar_foto_Perfil')
                
                FloatLayout:
                    
                    MDLabel:
                        text: "Nome"
                        padding: 10
                        font_size: dp(1)  
                        halign: "left"
                        size_hint: None, None
                        size: dp(150), dp(20)
                        pos_hint: {'center_x': 0.55, 'center_y': 0.74}
                    MDIconButton:
                        icon: "pencil"
                        theme_text_color: "Custom"
                        pos_hint: {'right': 0.98, 'center_y': 0.75}
                        text_color: 0, 0, 0, 1

                    MDLabel:
                        text: "Nome Social:"
                        padding: 10
                        font_size: dp(15)  
                        halign: "left"
                        size_hint: None, None
                        size: dp(150), dp(20)
                        pos_hint: {'center_x': 0.2, 'center_y': 0.68}

                    MDLabel:
                        text: "Gênero:"
                        padding: 10
                        font_size: dp(15)  
                        halign: "left"
                        size_hint: None, None
                        size: dp(150), dp(20)
                        pos_hint: {'center_x': 0.2, 'center_y': 0.65}

                    MDLabel:
                        text: "Profissão:"
                        padding: 10
                        font_size: dp(15)  
                        halign: "left"
                        size_hint: None, None
                        size: dp(150), dp(20)
                        pos_hint: {'center_x': 0.2, 'center_y': 0.62}

                    MDLabel:
                        text: "Localização:"    
                        padding: 10
                        font_size: dp(15)  
                        halign: "left"
                        size_hint: None, None
                        size: dp(150), dp(20)
                        pos_hint: {'center_x': 0.2, 'center_y': 0.59}
                    
                    MDBoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: dp(1)
                        padding: dp(5)
                        spacing: dp(5)
                        pos_hint: {'center_x': 0.5, 'center_y': 0.56}
                        canvas:
                            Color:
                                rgba: 0.7, 0.7, 0.7, 1 
                            Rectangle:
                                size: self.size
                                pos: self.pos

                    FloatLayout:
                        size_hint: None, None
                        size: dp(360), dp(400) 
                        pos_hint: {'center_x': 0.5, 'center_y': 0.34}

                        ScrollView:
                            pos_hint: {'center_x': 0.5, 'center_y': 0.05}
                            size_hint: None, None
                            size: dp(350), dp(640)

                            BoxLayout:
                                orientation: 'vertical'
                                size_hint_y: None
                                height: self.minimum_height
                                spacing:25

                                MDTextField:
                                    hint_text: "Sobre Mim"
                                    helper_text: "Descreva um pouco sobre você"
                                    multiline: True
                                    mode: "rectangle"
                                    max_text_length: 500
                                    font_size: sp(14)
                                    size_hint_y: None
                                    height: self.minimum_height

                                MDRectangleFlatIconButton:
                                    text: "Currículo:"    
                                    padding: 10
                                    font_size: dp(15)  
                                    halign: "left"
                                    pos_hint: {'center_x': 0.17, 'center_y': 0.5}
                                    icon: "attachment"
        MDNavigationDrawer:
            id: nav_drawer
            size_hint_y: 1
            spacing: 10
            background_color: 1, 1, 1, 1  

            FloatLayout:
                spacing: 14
                padding: dp(5)

                MDList:
                    pos_hint: {'center_x': 0.4, 'center_y': 0.31}
                    
                    ConfigItem:
                        text: "Perfil"
                        description: "Editar Perfil"
                        IconLeftWidget:
                            icon: "account-cog"
                    ConfigItem:
                        text: "Segurança"
                        description: "Configurações de segurança do aplicativo"
                        IconLeftWidget:
                            icon: "security"
                    ConfigItem:
                        text: "Visibilidade"
                        description: "Opões de visibilidade"
                        IconLeftWidget:
                            icon:"eye"
                    ConfigItem:
                        text: "Privacidade de Dados"
                        description: "Controle de privacidade e segurança de dados"
                        IconLeftWidget:
                            icon:'lock'
                    ConfigItem:
                        text: "Notificações"
                        description: "Gerencie as notificações do aplicativo"
                        IconLeftWidget:
                            icon: "bell-cog"
                    ConfigItem:
                        text: "Logout"
                        description: "Sair da conta e fazer logout do aplicativo"
                        IconLeftWidget:
                            icon: "logout"
                MDLabel:
                    id:Username
                    text: "Username"
                    font_size: dp(20)
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]
                    pos_hint: {'center_x': 0.45, 'center_y': 0.94}

                Image:
                    source: 'Background\profile.png'
                    size_hint: None, None
                    size: dp(65), dp(65)  
                    pos_hint: {'center_x': 0.10,'center_y': 0.95}
                    pos: self.parent.pos

                MDIconButton:
                    icon: "account-circle"
                    theme_text_color: "Custom"
                    pos_hint: {'center_x': 0.1,'center_y': 0.03}
                    text_color: 0, 0, 0, 1  
                    on_release: app.change_screen('Conta')

                MDIconButton:
                    icon: "moon-waning-crescent"
                    theme_text_color: "Custom"
                    pos_hint: {'center_x': 0.3,'center_y': 0.03}
                    text_color: 0, 0, 0, 1  
                    on_release: app.change_screen('Modo_noturno')
                
                MDIconButton:
                    icon:'bookmark-multiple'
                    theme_text_color: "Custom"
                    pos_hint: {'center_x': 0.5,'center_y': 0.03}
                    text_color: 0, 0, 0, 1  
                    on_release: app.change_screen('Salvos')

                MDIconButton:
                    icon:"bell-ring"
                    theme_text_color: "Custom"
                    pos_hint: {'center_x': 0.7,'center_y': 0.03}
                    text_color: 0, 0, 0, 1  
                    on_release: app.change_screen('notificações')

                MDIconButton:
                    icon:"chat"
                    theme_text_color: "Custom"
                    pos_hint: {'center_x': 0.9,'center_y': 0.03}
                    text_color: 0, 0, 0, 1  
                    on_release: app.change_screen('chat')