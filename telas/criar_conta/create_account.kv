MDScreen:
    name: 'Criar_conta'

    MDCard:
        size_hint: None, None
        size: dp(250), dp(450)  
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 20
        orientation: 'vertical'
        padding: dp(15)
        spacing: dp(10)
        md_bg_color: 0, 0, 0, 0  
        radius: [dp(10)]  
        mode: "round"
        
        MDLabel:
            id: label
            text: "Criar conta"
            font_size: dp(30)  
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: dp(5)

        MDTextField:
            hint_text: "Nome Completo:" 
            icon_right: "rename"
            size_hint_x: None
            width: dp(200)  
            font_size: dp(14)  
            pos_hint: {'center_x': 0.5}
            mode: "round"
            required: True

        MDTextField:
            hint_text: "Nome Social:" 
            icon_right: "rename-outline"
            size_hint_x: None
            width: dp(200)  
            font_size: dp(14)  
            pos_hint: {'center_x': 0.5}
            mode: "round"
            required: False 

        MDTextField:
            hint_text: "Email:" 
            icon_right: "email"
            size_hint_x: None
            width: dp(200) 
            font_size: dp(14)  
            pos_hint: {'center_x': 0.5}
            mode: "round"
            required: True

        MDTextField:
            password: True
            hint_text: "Digite sua Senha"
            icon_right: "key"
            size_hint_x: None
            width: dp(200)  
            font_size: dp(14)  
            pos_hint: {'center_x': 0.5}
            mode: "round"
            required: True

        MDTextField:
            password: True
            hint_text: "Confirmar Senha"
            icon_right: "key-chain"
            size_hint_x: None
            width: dp(200)  
            font_size: dp(14)  
            pos_hint: {'center_x': 0.5}
            mode: "round"
            required: True

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: self.minimum_height
            spacing: 14
            padding: dp(10)
            pos_hint: {'center_x': 0.5}

            MDTextField:
                hint_text: "DD"
                required: True
                size_hint_x: None
                width: dp(50)
                font_size: dp(14)
                pos_hint: {'center_y': 0.5}
                mode: "round"
                input_filter: "int"
                input_type: "number"
                max_text_length: 2
                on_text: 
                    root.ids.month_field.focus = True if len(self.text) == 2 else False

            MDTextField:
                required: True
                hint_text: "MM"
                size_hint_x: None
                width: dp(50)
                font_size: dp(14)
                pos_hint: {'center_y': 0.5}
                mode: "round"
                input_filter: "int"
                input_type: "number"
                max_text_length: 2
                on_text: 
                    root.ids.year_field.focus = True if len(self.text) == 2 else False

            MDTextField:
                hint_text: "YYYY"
                required: True
                size_hint_x: None
                width: dp(70)
                font_size: dp(14)
                pos_hint: {'center_y': 0.5}
                mode: "round"
                input_filter: "int"
                input_type: "number"
                max_text_length: 4
                        
        MDFillRoundFlatButton:
            text: "Criar conta"
            custom_color: "Gray"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1  
            width: dp(200)
            md_bg_color: app.theme_cls.primary_color
            font_size: dp(14)  
            pos_hint: {'center_x': 0.5}
