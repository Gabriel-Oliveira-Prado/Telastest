MDScreen:
    name:'Entrar_login'
    Image:
        source: 'Background\Background4.png'
        allow_stretch: True
        keep_ratio: False


    MDCard:
        size_hint: None, None
        size: dp(250), dp(350) 
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        elevation: 20
        orientation: 'vertical'
        padding: dp(15)
        spacing: dp(20)
        md_bg_color: 0, 0, 0, 0  
        radius: [dp(10)]  
        mode: "round"

        MDLabel:
            id: label
            text: "Login"
            font_size: dp(30)  
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: dp(5)

        MDTextField:
            hint_text: "Digite seu Login" 
            id: login
            icon_right: "account"
            size_hint_x: None
            width: dp(200)  
            font_size: dp(14)  
            pos_hint: {'center_x': 0.5}
            mode: "round"

        MDTextField:
            password: True
            hint_text: "Digite sua Senha"
            id: senha
            icon_right: "account-key"
            size_hint_x: None
            width: dp(200)  
            font_size: dp(14) 
            pos_hint: {'center_x': 0.5}
            mode: "round"

        MDTextButton:
            text: "Esqueceu a senha?"
            theme_text_color: "Primary"
            font_size: "12sp"
            pos_hint: {"center_x": 0.5}
            on_release: app.open_link("https://exemplo.com")

        MDFillRoundFlatButton:  
            text: "     Entrar     "
            custom_color: "Gray"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1 
            md_bg_color: app.theme_cls.primary_color
            font_size: dp(14) 
            pos_hint: {'center_x': 0.5}

        MDFillRoundFlatButton:
            text: "Criar conta"
            custom_color: "Gray"
            theme_text_color: "Custom"
            text_color: 0, 0, 0, 1  
            md_bg_color: app.theme_cls.primary_color
            font_size: dp(14)  
            pos_hint: {'center_x': 0.5}
            on_release:
                app.root.transition.direction = 'right'
                app.root.current = 'Criar_conta'
